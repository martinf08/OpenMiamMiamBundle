{% form_theme form '@IsicsOpenMiamMiam/Admin/statisticsFormTheme.html.twig' %}

<div class="statistics panel panel-success">
    <div class="panel-body">
        <form action="{{ path('open_miam_miam.admin.producer.show_dashboard', {'id': producer.id}) }}"
              data-submit="{{ path('open_miam_miam.admin.producer.statistics', {'id': producer.id}) }}"
              novalidate
              method="post"
              id="producer-statistics-form">
            <div class="filter-form row">
                <div class="col-md-8 statistics-mode">
                    {{ form_widget(form.mode) }}
                </div>
                <div class="col-md-4 statistics-branch">
                    {{ form_widget(form.branch) }}
                </div>
                {{ form_rest(form) }}
                <input type="submit" />
            </div>
        </form>

        <div class="graph-container">
            <div class="graph" id="producer-statistics-graph-container">

            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script>
    google.load("visualization", "1", {packages:["corechart"]});
</script>
