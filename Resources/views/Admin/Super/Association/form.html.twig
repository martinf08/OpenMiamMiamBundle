{% form_theme form _self 'IsicsOpenMiamMiamBundle::form.html.twig' %}

{% set associationWithOwner = form.vars.data %}

<a href="{{ path('open_miam_miam.admin.super.association.list') }}" class="pull-right">{{ 'admin.return'|trans }}</a>
{{ form_start(form) }}

    {{ form_errors(form) }}

    {{ form_row(form.name, {'label': 'admin.super.associations.form.name'|trans}) }}

    {{ form_row(form.email, {'label': 'admin.super.associations.form.email'|trans}) }}

    <div class="owner-container">
        {{ form_row(form.owner, {'label': 'admin.super.associations.form.owner'|trans, 'attr': {'placeholder':  'admin.super.associations.form.owner.placeholder'|trans}}) }}
    </div>

    <a href="{{ path('open_miam_miam.admin.super.association.list') }}" class="pull-right">{{ 'admin.return'|trans }}</a>

    <button type="submit" class="btn btn-primary btn-lg" />
        <span class="glyphicon glyphicon-floppy-save"></span>
        {{ 'admin.save'|trans }}
    </button>

    {% if associationWithOwner.association.id is not null %}
        <a data-url="{{ path('open_miam_miam.admin.super.association.delete', {'associationId': associationWithOwner.association.id}) }}" class="btn btn-danger btn-lg" title="{{ 'admin.super.associations.form.delete'|trans }}" data-toggle="modal" href="#delete-dialog"><span class="glyphicon glyphicon-trash"></span></a>
    {% endif %}

    {% do form.save.setRendered %}
{{ form_end(form) }}
