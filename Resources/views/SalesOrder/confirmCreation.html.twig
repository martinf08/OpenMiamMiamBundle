{% embed 'IsicsOpenMiamMiamBundle:Branch:base.html.twig' with {'branch': branch} %}
    {% block content %}
        <div id="order-progress"  class="btn-group btn-group-justified">
            <a href="#" class="btn btn-success" disabled="disabled"><span class="badge">1</span> {{ 'order.process.stage1'|trans }}</a>
            <a href="#" class="btn btn-success" disabled="disabled"><span class="badge">2</span> {{ 'order.process.stage2'|trans }}</a>
            <a href="#" class="btn btn-warning active"><strong><span class="badge">3</span> {{ 'order.process.stage3'|trans }}</strong></a>
        </div>

        <h1><span class="glyphicon glyphicon-ok-sign"></span> {{ 'order.confirmed.title'|trans({'%firstname%': format_user_identity(app.user, '%firstname%'), '%lastname%': format_user_identity(app.user, '%lastname%'), '%ref%': order.ref}) }}</h1>
        {{ 'order.confirmed.body_html'|trans({'%firstname%': format_user_identity(app.user, '%firstname%'), '%lastname%': format_user_identity(app.user, '%lastname%'),'%ref%': order.ref, '%orders_url%': path('fos_user_profile_orders'), '%occurrence_date%': order.branchOccurrence.begin|format_date('eeee dd MMMM')})|raw }}
    {% endblock %}
{% endembed %}