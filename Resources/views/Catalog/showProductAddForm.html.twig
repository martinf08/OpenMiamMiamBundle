{% extends 'IsicsOpenMiamMiamBundle:Cart:showAddForm.html.twig' %}

{% block availability %}
        {% if not cart.closed %}
            <dt>{{ 'availability'|trans }}</dt>
            <dd>{{ parent() }}</dd>
        {% endif %}
    </dl>
{% endblock %}

{% block form %}
    {% if cart.closed %}
        {{ parent() }}
    {% elseif form is defined %}
        <div class="panel panel-primary">
            <div class="panel-body">
                {{ parent() }}
            </div>
        </div>
    {% endif %}
{% endblock %}