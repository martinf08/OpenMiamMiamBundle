{% embed 'IsicsOpenMiamMiamBundle:Branch:base.html.twig' with {'branch': branch, 'homepage': true} %}
    {% block content %}
        <div class="row">
            <div class="col-md-8">
                <div id="welcome" class="well">
                    {{ branch.welcomeText|raw }}
                    <p><a href="{{ path('open_miam_miam.branch.presentation', {'branchSlug': branch.slug}) }}">{{ 'zone.welcome.more'|trans }}</a></p>
                </div>
            </div>
            <div class="col-md-4">
                {{ render(controller('IsicsOpenMiamMiamBundle:Branch:ShowLatestArticles', {'branch': branch})) }}
            </div>
        </div>

        {{ render(controller('IsicsOpenMiamMiamBundle:Catalog:ShowProductsOfTheMoment', {'branch': branch})) }}
    {% endblock %}

    {% block javascript %}
        {{ parent() }}
        <script type="text/javascript">
            $(function() {
                new OpenMiamMiam.Quantity;
                new OpenMiamMiam.CartAddForm;
            });
        </script>
    {% endblock %}
{% endembed %}