{% import "IsicsOpenMiamMiamBundle:Macro:producer.html.twig" as producer_macro %}

<div id="producers" class="panel panel-default">
    <div class="panel-heading">
        <h2 class="panel-title"><span class="glyphicon glyphicon-user"></span> {{ 'zone.producers.title'|trans }}</h2>
    </div>
    <ul class="list-group">
    {% for producer in producers %}
        <li class="list-group-item">
            <a href="{{ path('open_miam_miam.producer', {'producerSlug': producer.slug}) }}">
                {{ producer }} {{ producer_macro.specialty(producer) }}
            </a>
        </li>
    {% endfor %}
    </ul>
    <div class="panel-footer">
        <a href="{{ path('open_miam_miam.branch.producers', {'branchSlug': branch.slug}) }}">{{ 'zone.producers.link'|trans }}</a>
    </div>
</div>