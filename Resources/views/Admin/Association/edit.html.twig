 {% form_theme form _self 'IsicsOpenMiamMiamBundle::form.html.twig' %}
 {% extends 'IsicsOpenMiamMiamBundle:Admin:admin.html.twig' %}

{% block content %}
    <div class="association_form">
        <h1>{{ 'admin.association.infos.title'|trans }}</h1>
        {{ form_start(form, {'attr': {'id': 'open_miam_miam_admin_association_form', 'novalidate': ''}}) }}
        {{ form_row(form.name, {'label': 'admin.association.infos.name'|trans}) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.closingDelay, {'label': 'admin.association.infos.closing_delay'|trans}) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.openingDelay, {'label': 'admin.association.infos.opening_delay'|trans}) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.defaultCommission, {'label': 'admin.association.infos.default_commission'|trans}) }}
            </div>
        </div>

        {{ form_row(form.email, {'label': 'admin.association.infos.email'|trans}) }}

        {{ form_row(form.address1, {'label': 'admin.association.infos.address1'|trans}) }}
        {{ form_errors(form.address2) }}
        {{ form_row(form.address2, {'label': 'admin.association.infos.address2'|trans}) }}
        <div class="row">
            <div class="col-md-3">
                {{ form_row(form.zipcode, {'label': 'admin.association.infos.zipcode'|trans}) }}
            </div>
            <div class="col-md-9">
                {{ form_row(form.city, {'label': 'admin.association.infos.city'|trans}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.phoneNumber1, {'label': 'admin.association.infos.phone_number1'|trans}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.phoneNumber2, {'label': 'admin.association.infos.phone_number2'|trans}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.website, {'label': 'admin.association.infos.website'|trans}) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.facebook, {'label': 'admin.association.infos.facebook'|trans}) }}
            </div>
        </div>

        {{ form_row(form.presentation, {'label': 'admin.association.infos.presentation'|trans, 'attr': {'class': 'tinymce'}}) }}

        <div class="edit-association-button">
            <button type="submit" class="btn btn-primary btn-lg" />
                <span class="glyphicon glyphicon-floppy-save"></span>
                {{ 'admin.save'|trans }}
            </button>
        </div>
    </div>
    {{ form_end(form) }}

    {% include 'IsicsOpenMiamMiamBundle:Admin:activityStream.html.twig' %}
{% endblock %}
{% block javascript %}
    {{ tinymce_init() }}
{% endblock %}
